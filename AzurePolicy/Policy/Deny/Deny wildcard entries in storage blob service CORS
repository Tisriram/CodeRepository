 {
       "mode": "All",
    "description": "This policy rule will deny any wildcard entries while adding Resource sharing (CORS) in Storage blob services",
    "metadata": {
      "category": "Storage"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts/blobServices"
          },
          {
            "not": {
              "field": "Microsoft.Storage/storageAccounts/blobServices/cors.corsRules[*].allowedOrigins[*]",
              "notContains": "*"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }

